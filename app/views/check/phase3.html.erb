<% if current_user.phase3 ==true%>

<div class="shadow-lg p-3 mb-5 bg-black rounded">
  <div class="panel panel-default">
    <div class="panel-heading" >
      <h2 class="text-center"><b>Unapproved Application</b></h2>
    </div>
    <div class="panel-body">

<table id="table_id" class="table table-striped">
<thead>
            <tr>
            <th>Name</th>
            <th>EMP_ID</th>
            <th>Department</th>
            <th>Remark</th>
            <th>Show</th>
            <th>approve</th>
            <th>disapprove</th>
          </tr>
</thead>
<tbody>
<% @phases.each do |phase| %>
  <% if phase.phase3 == false && phase.phase2 == true && phase.disapprove == false %>
  <tr>

       <td ><%= phase.name %></td>
       <td ><%= phase.unique_id %></td>
       <td ><%= phase.department %></td>
       <td><%=phase.phase2_remark%></td>
       <td ><%= link_to "Show", show_user_path(phase.id), method: :get,class:"btn btn-primary btn-sm" %></td>
        <td> <button type="button" class="btn btn-warning btn-md" data-toggle="modal" style="margin:10px;"  onclick="sticker_allotment(<%=phase.id%>);" data-disable-with="Validating ...">Submit</button></td>
         <td><button type="button" class="btn btn-warning btn-md" data-toggle="modal" style="margin:10px;"  onclick="remark(<%= phase.id%>);" data-disable-with="Validating ...">Submit</button></td>
   
  </tr>
    <% end %>
   <% end %>
</tbody>
</table>
<% if current_user %>
    <%= link_to "signout" , destroy_user_session_path ,method:     :delete  %>
    <%= link_to 'change password' , edit_user_registration_path %>
<% end %>

   <!-- <center>
    <button type="button" class="btn btn-warning btn-md" data-toggle="modal" style="margin:10px;"  onclick="remark();" data-disable-with="Validating ...">Submit</button>
  </center>  -->
<% else %>
   <%= render "devise/sessions#new" %>

<% end %>
 </div>
 </div>
 </div>



