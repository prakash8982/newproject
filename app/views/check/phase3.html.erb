<% if current_user.phase3 ==true%>
<p id="notice"><%= notice %></p>
<div class="shadow-lg p-3 mb-5 bg-black rounded">
  <div class="panel panel-default">
    <div class="panel-heading" >
      <h2 class="text-center"><b>Unapproved Application</b></h2>
    </div>
    <div class="panel-body">

      <table id="table_id" class="table table-striped">
          <thead>
            <tr>
            <th>Name</th>
            <th>EMP_ID</th>
            <th>Department</th>
            <th>status</th>
          </tr>
        </thead>
<tbody>
<% @phases.each do |phase| %>
  <% if phase.phase3 == false && phase.phase2 == true %>
  <tr>

       <td ><%= phase.name %></td>
       <td ><%= phase.unique_id %></td>
       <td ><%= phase.department %></td>
        <td> <button type="button" class="btn btn-warning btn-md" data-toggle="modal" style="margin:10px;"  onclick="sticker_allotment(<%=phase.id%>);" data-disable-with="Validating ...">Submit</button</td>
         <td><%= link_to "approve", disapprove_path(phase), method: :post,class:"btn btn-primary btn-sm" %></td>
   <% end %>
   <% end %>
    </tr>
     <%end %>
</tbody>
</table>
<% if current_user %>
    <%= link_to "signout" , destroy_user_session_path ,method:     :delete  %>
    <%= link_to 'change password' , edit_user_registration_path %>

  <center>
    <button type="button" class="btn btn-warning btn-md" data-toggle="modal" style="margin:10px;"  onclick="sticker_allotment();" data-disable-with="Validating ...">Submit</button>
  </center>
<% else %>
   <%= render "devise/sessions#new" %>

 <% end %>
 </div>
 </div>
 </div>
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog modal-lg">
    <div class="modal-content"><div class="modal-body" id="modal_response">
    </div>
    </div>
  </div>
</div>

<script>
    function sticker_allotment(id){
        $.ajax({
            type: "PATCH",
            url: "/generate/sticker/"+id,
            dataType: "script",
            success: function(data) {
                console.log(data);
            }
        });
    }
</script>
<script >$(document).ready( function () {
    $('#table_id').DataTable();
} )</script>


 