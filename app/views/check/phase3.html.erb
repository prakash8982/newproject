</div>

<script>
    function sticker_allotment(id){
        $.ajax({
            type: "PATCH",
            url: "/generate/sticker/"+id,
            dataType: "script",
            success: function(data) {
                console.log(data);
            }
        });
    }
    function remark(id){
        $.ajax({
            type: "PATCH",
            url: "/generate/remark/"+id,
            dataType: "script",
            success: function(data) {
                console.log(data);
            }
        });
    }
</script>
