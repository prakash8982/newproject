
<div class="container" >
<table class="table table-striped" >
  <thead>
  <tr>
    <th scope="col"style="font-size: large">Serial no.</th>
    <th scope="col" style="font-size: large">Field</th>
    <th scope="col" style="font-size: large">infromation</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <th scope="row">1</th>
    <td style="font-size: large">User Id</td>
    <td style="font-size: large"><%=@pstaff.id%></td>

  </tr>
  <tr>
    <th scope="row">2</th>
    <td style="font-size: large">Name</td>
    <td style="font-size: large"><%=@pstaff.name%></td>

  </tr>
  <tr>
    <th scope="row">3</th>
    <td style="font-size: large">Unique Id</td>
    <td style="font-size: large"><%=@pstaff.unique_id%></td>
  </tr>


  <tr>
    <th  scope="row">4</th>
    <td style="font-size: large">Gender</td>
    <td style="font-size: large"><%=@pstaff.gender%></td>
  </tr>

  <tr>
    <th scope="row">5</th>
    <td style="font-size: large">Mobile no.</td>
    <td style="font-size: large"><%=@pstaff.mobile_no%></td>
  </tr>

  <tr>
    <th scope="row">6</th>
    <td style="font-size: large">Department</td>
    <td style="font-size: large"><%=@pstaff.department%></td>
  </tr>


  <tr>
    <th scope="row">7</th>
    <td style="font-size: large">Vehicle No.</td>
    <td style="font-size: large"><%=@pstaff.vichel_no%></td>
  </tr>


  <tr>
    <th scope="row">8</th>
    <td style="font-size: large">Vehicle Type</td>
    <td style="font-size: large"><%=@pstaff.vehical_type%></td>
  </tr>


  <tr>
    <th scope="row">9</th>
    <td style="font-size: large">Vehicle Model</td>
    <td style="font-size: large"><%=@pstaff.vichel_model%></td>
  </tr>


  <tr>
    <th scope="row">10</th>
    <td style="font-size: large">Address</td>
    <td style="font-size: large"><%=@pstaff.address%></td>
  </tr>

  <tr>
    <th scope="row">11</th>
    <td style="font-size: large">Registration Certificate</td>
    <td style="font-size: large">
        <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">view</button>
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
          <div class="modal-dialog modal-lg modal-full">

            <!-- Modal content-->
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>
              <div class="modal-body ">
                          <iframe src="<%= @pstaff.registration_certificate %>" width="100%" height="500px">
                            <p>Your browser does not support iframes.</p>
                          </iframe>
              </div>

            </div>

          </div>
        </div>


    </td>
  </tr>


  <tr>
    <th scope="row">12</th>
    <td style="font-size: large">Aadhaar Card</td>
    <td style="font-size: large">
      <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal1">view</button>
      <!-- Modal -->
      <div class="modal fade" id="myModal1" role="dialog">
        <div class="modal-dialog modal-lg modal-full">

          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body ">
              <iframe src="<%=@pstaff.aadhaar_card%>" width="100%" height="500px">
                <p>Your browser does not support iframes.</p>
              </iframe>
            </div> 

          </div>

        </div>
      </div>



    </td>
  </tr>

  <% if @pstaff.type_applicant == 'Student'%>
  <tr>
    <th scope="row">12</th>
    <td style="font-size: large">Medical Certificate  </td>
    <td style="font-size: large">
      <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal1">view</button>
      <!-- Modal -->
      <div class="modal fade" id="myModal1" role="dialog">
        <div class="modal-dialog modal-lg modal-full">

          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body ">
              <iframe src="<%=@pstaff.document%>" width="100%" height="500px">
                <p>Your browser does not support iframes.</p>
              </iframe>
            </div> 

          </div>

        </div>
      </div>



    </td>
  </tr>
  <%end%>
  <tr>
    <th scope="row">13</th>
    <td style="font-size: large">RC holder name</td>
    <td style="font-size: large"><%=@pstaff.RC_holder_name%></td>
  </tr>

  <tr>
    <th scope="row">14</th>
    <td style="font-size: large">Relationship</td>
    <td style="font-size: large"><%=@pstaff.relationship%></td>
  </tr>
  </tbody>
</table>





