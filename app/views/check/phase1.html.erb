<% if current_user.phase1 ==true%>

 <!-- <p> <h1>Unapproved application</h1> count = <%= @phases.where(:phase1 => false).count %></p>  -->

<div class="shadow-lg p-3 mb-5 bg-black rounded">
    <div class="panel panel-default">
      <div class="panel-heading" >
        <h2 class="text-center"><b>Unapproved Application</b></h2>
      </div>
      <div class="panel-body">
        <table id="phase1_id" class="table table-hover table-bordered " style="width:100%">
          <thead >
          <tr>
      <th>Name</th>
      <th>EMP_ID</th>
      <th>Department</th>
      <th>show</th>
      <th>Approve</th>
      <th>Disapprove</th>
      </tr>
  </thead>
<tbody >
<% @phases.each do |phase| %>
  <% if phase.phase1 == false %>

   <tr>
       <td ><%= phase.name %></td>
        <td ><%= phase.unique_id %></td>
       <td ><%= phase.department %></td>
       <td ><%= link_to "Show", show_user_form_path(phase.id), method: :get,class:"btn btn-primary btn-sm" %></td>
        <td ><%= link_to "Approve", approve_path(phase), method: :post,class:"btn btn-primary btn-sm" %></td>
       <td ><%= link_to "Disapprove", disapprove_path(phase), method: :post,class:"btn btn-primary btn-sm" %></td>
   
    </tr>
     <% end %>

<% end %>
</tbody>
        </table>
<% if current_user %>
    <%= link_to "signout" , destroy_user_session_path ,method:     :delete  %>
    <%= link_to 'change password' , edit_user_registration_path %>

 <% end %>
 
<% else %>
    <%= render "devise/sessions#new" %>
<%end %>
</div>
 </div>
 </div>

